<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jet2006.LearnApp.Modules.Discover.DiscoverFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top"
        android:background="@color/form_backcolor"
        android:orientation="vertical"
        android:paddingBottom="30.0dip">


        <!--朋友圈-->
        <RelativeLayout
            android:id="@+id/leftBtnMyInfo"
            android:layout_width="match_parent"
            android:layout_height="60dip"
            android:layout_marginTop="15.0dip"
            android:background="@drawable/main_leftmenu_cell_background"
            android:clickable="true">
            <View style="@style/splitline_horizontal" />

            <ImageView
                android:id="@+id/leftIvHeadPhoto"
                android:layout_width="40.0dip"
                android:layout_height="40.0dip"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:padding="2.0dip"
                android:src="@drawable/ic_mainpageitem_shop" />

            <TextView
                android:id="@+id/leftTvUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/leftIvHeadPhoto"
                android:layout_centerVertical="true"
                android:layout_marginLeft="6.0dip"
                android:layout_marginRight="15.0dip"
                android:text="朋友圈"
                android:textColor="@color/DarkGray"
                android:textSize="17.0sp" />

            <View
                style="@style/splitline_horizontal"
                android:layout_alignParentBottom="true" />
        </RelativeLayout>

        <!--扫一扫-->
        <RelativeLayout
            android:id="@+id/leftBtnSaoYiSao"
            android:layout_width="match_parent"
            android:layout_height="60dip"
            android:layout_marginTop="15.0dip"
            android:background="@drawable/main_leftmenu_cell_background"
            android:clickable="true"
            >
            <View style="@style/splitline_horizontal" />

            <ImageView
                android:id="@+id/leftIvSaoYiSao"
                android:layout_width="40.0dip"
                android:layout_height="40.0dip"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:padding="2.0dip"
                android:src="@drawable/ic_mainpageitem_rt_hot" />

            <TextView
                android:id="@+id/leftTvSaoYiSao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/leftIvSaoYiSao"
                android:layout_centerVertical="true"
                android:layout_marginLeft="6.0dip"
                android:layout_marginRight="15.0dip"
                android:text="扫一扫"
                android:textColor="@color/DarkGray"
                android:textSize="17.0sp" />

            <View
                style="@style/splitline_horizontal"
                android:layout_alignParentBottom="true" />
        </RelativeLayout>

        <!--摇一摇-->
        <RelativeLayout
            android:id="@+id/leftBtnYaoYiYao"
            android:layout_width="match_parent"
            android:layout_height="60dip"
            android:background="@drawable/main_leftmenu_cell_background"
            android:clickable="true"
            >

            <ImageView
                android:id="@+id/leftIvYaoYiYao"
                android:layout_width="40.0dip"
                android:layout_height="40.0dip"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:padding="2.0dip"
                android:src="@drawable/ic_mainpageitem_rt_fail"/>

            <TextView
                android:id="@+id/leftTvYaoYiYao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/leftIvYaoYiYao"
                android:layout_centerVertical="true"
                android:layout_marginLeft="6.0dip"
                android:layout_marginRight="15.0dip"
                android:text="摇一摇"
                android:textColor="@color/DarkGray"
                android:textSize="17.0sp" />

            <View
                style="@style/splitline_horizontal"
                android:layout_alignParentBottom="true" />
        </RelativeLayout>


    </LinearLayout>


</FrameLayout>
