<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.terry.viewpagerdemo" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>

    <application
        android:name=".BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="locked" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Modules.Discover.NOFActivity"
            android:label="@string/title_activity_nof" >
        </activity>
        <activity
            android:name=".Util.TrafficStatActivity"
            android:label="@string/title_activity_nof" >
        </activity>
        <activity
            android:name=".Util.DownloadListActivity"
            android:label="@string/title_activity_nof" >
        </activity>
        <activity
            android:name=".Util.CameraActivity"
            android:label="@string/title_activity_camera" >
        </activity>
        <activity
            android:name=".Util.FullscreenVlcPlayer"
            android:label="@string/title_activity_fullscreen_vlc_player" >
        </activity>
        <activity
            android:name=".Util.FullscreenSVPlayer"
            android:label="@string/title_activity_fullscreen_svplayer" >
        </activity>

        <service android:name=".Framework.DownloadManager.services.TrafficCounterService" >
        </service>
        <service android:name=".Framework.DownloadManager.services.DownloadService" >
            <intent-filter >
                <action android:name="com.terry.viewpagerdemo.Framework.DownloadManager.services.IDownloadService" />
            </intent-filter>
        </service>

    </application>

</manifest>
